slick.row.slick-slider.hide-on-small-only(
  accessibility="false"
  autoplay="true"
  autoplaySpeed=5000
  dots="false"
  fade="true"
  cssEase="linear"
  lazy-load="ondemand"
  mobileFirst="true"
  arrows="false"
)
  .col.l12.slick-slide.slide1
  .slick-slide.col.l12(style="background-image: url(/static/client/assets/images/slides/slide2.jpg)")
  .slick-slide.col.l12(style="background-image: url(/static/client/assets/images/slides/slide3.jpg)")

include ../../views/separator.jade
.about-container.container.grey.lighten-4.z-depth-1
  .row.center-align
    .col.l4.m4.s12.cyan-text.center-align
      h5 Доставка
      p
        i.fa.fa-truck.fa-3x
      p При заказе более 200000 руб. доставка БЕСПЛАТНАЯ
    .col.l4.m4.s12.green-text.center-align
      h5 Низкие цены
      p
        i.fa.fa-money.fa-3x
      p Воздушные шарики в Гомеле по доступным ценам
    .col.l4.m4.s12.pink-text.text-lighten-2.center-align
      h5 Гаратния
      p
        i.fa.fa-check-circle.fa-3x
      p Дополнительная обработка латексных шариков средством Hi-float
.container
  .row
    h3.pink-text.text-lighten-2.center-align Популярные товары
  .row
    .col.l5.m6.s10.offset-s1.wow.fadeInLeft(
      ng-repeat="popularProd in popularProducts"
      ng-class="{'offset-l1': !$odd}"
    )
      .z-depth-1.product
        .center-align
          img.responsive-img.cursor-pointer(
            ng-src="{{popularProd.image}}"
            alt="{{popularProd.name}}"
            ui-sref="catalog.details({id: popularProd.id})"
          )
        a.name(
          ui-sref="catalog.details({id: popularProd.id})"
          title="{{popularProd.name}}"
        ) {{popularProd.name}}
        p.price.left
          span {{popularProd.price}}
        p.price.right(ng-if="popularProd.is_sale")
          i.fa.fa-percent.fa-lg(title="Скидка {{popularProd.discount}} руб.")
        .clearfix

.container
  .feedback-container.row.center-align.light-green-text.text-darken-4
    .col.l4.m6.s12.offset-m3.wow.slideInLeft(ng-repeat="feedback in feedbacks")
      .feedback.green.lighten-1.z-depth-1
        img.avatar.circle(ng-src="{{feedback.img}}")
        p {{feedback.text}}
        p {{feedback.name}}
